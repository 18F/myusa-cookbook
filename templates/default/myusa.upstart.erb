description "Start the myusa unicorn"

start on startup
stop on shutdown

respawn
respawn limit 10 5

script
su <%= @app_user %> -c "/bin/bash <<EOT
export RAILS_ENV=<%= @rails_env %>
export PATH=/opt/rbenv/shims:/opt/rbenv/bin:\"$PATH\"

/var/www/myusa/current/bin/unicorn -c /var/www/myusa/current/config/unicorn.rb -E staging >> /var/www/myusa/current/log/unicorn.sys.log 2>&1

EOT"
end script
